{
	"compilerOptions": {
		"outDir": "dist",
		"sourceMap": true,
		"module": "commonjs",
		"target": "es6",
		"jsx": "react",
		"lib": ["es2018", "dom", "dom.iterable"],
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Node",
		"strict": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true
	},
    "include": ["./src/**/*"]
}